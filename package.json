{
  "name": "bunny-rest",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev:prepare": "docker-compose -f docker-compose.dev.yml up -d --build",
    "dev:unprepare": "docker-compose -f docker-compose.dev.yml down",
    "dev": "cross-env NODE_ENV=development nodemon index.ts",
    "dev:ts-node": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only index.ts",
    "build": "cp -R certs public/ && cp -R src/locales public/src && cross-env NODE_ENV=production tsc",
    "serve": "yarn build && cross-env NODE_ENV=production node public/index.js",
    "test": "cross-env NODE_ENV=test node public/index.js",
    "dev:start-all": "docker-compose -f docker-compose.dev-all.yml up -d --build",
    "dev:stop-all": "docker-compose -f docker-compose.dev-all.yml down",
    "test:deploy": "docker-compose -f docker-compose.test.yml up -d --build",
    "test:undeploy": "docker-compose -f docker-compose.test.yml down",
    "in-docker:dev": "cross-env NODE_ENV=development DOCKER_DEV=yes nodemon index.ts"
  },
  "dependencies": {
    "apollo-server": "^3.12.0",
    "bcrypt": "^5.1.0",
    "config": "^3.3.9",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.9",
    "dotenv-flow": "^3.2.0",
    "express": "^4.18.2",
    "graphql": "^16.7.1",
    "i18n": "^0.15.1",
    "jsonwebtoken": "^9.0.1",
    "lodash": "^4.17.21",
    "mongodb": "^5.7.0",
    "nanoid": "^4.0.2",
    "nexus": "^1.3.0",
    "pg": "^8.11.1",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "prom-client": "^14.2.0",
    "redis": "^4.6.7",
    "response-time": "^2.3.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^3.3.0",
    "@types/connect-redis": "^0.0.20",
    "@types/cors": "^2.8.13",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.17",
    "@types/i18n": "^0.13.6",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^20.4.2",
    "@types/pg": "^8.10.2",
    "@types/pino": "^7.0.5",
    "@types/response-time": "^2.3.5",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^3.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typeorm": "^0.3.17",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "^5.1.6"
  }
}
